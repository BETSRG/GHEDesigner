    },
    "pump": {
      "type": "object",
      "description": ""
    },
    "towers": {
      "type": "object",
      "description": ""
    },
    "generic-loads": {
      "type": "object",
      "description": ""
    },
    "simulation-control": {
      "type": "object",
      "description": ""
    }
  },
  "required": [
    "topology",
    "fluids",
    "building",
    "ground-heat-exchanger",
    "pump",
    "towers",
    "generic-loads",
    "simulation-control"
  ]
}
